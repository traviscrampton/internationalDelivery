<div class="container">
  <div class="row">
    <div class="col-md-12 bringItem">
      <h1>Bring Request</h1><hr>
    </div>
    <div class="col-md-4">
      <%= image_tag @request.item.itemimage.url(:medium) %>
    </div>
    <div class="col-md-4">
      <h1><%= @request.item.itemname %></h1>
      <h4> <%= @request.item.itemdescription %></h4>
      <h3> Between <%= @request.monthstart %> <%= @request.daystart %>, <%= @request.yearstart %> - <%= @request.monthend %> <%= @request.dayend %>, <%= @request.yearend %></h3>
      <h5><%= @request.airport %></h5>
    </div>
    <div class="col-md-4">
      <%= render 'form' %>
    </div>
  </div>
</div>
