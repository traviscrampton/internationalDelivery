

<% if current_user %>
  <div class="container">
  <h1>Request An International Delivery</h1><hr>


    <%= bootstrap_form_for @request do |f| %>

      <div class="field form-group">
        <%= f.text_field :date %>
      </div>
      <div class="field form-group">
        <%= f.text_field :country %>
      </div>
      <div class="field form-group">
        <%= f.text_field :airport %>
      </div>
      <div class="field form-group">
        <%= f.text_field :itemname %>
      </div>
      <div class="field form-group">
        <%= f.text_field :itemdescription %>
      </div>
      <div class="field form-group">
        <%= f.file_field :itemphoto %>
      </div>
      <div class="actions form-group">
        <%= f.submit "Post Request", class:"btn btn-primary" %>
      </div>
      <% end %>
  </div>
<% else %>
<h2>Please <%= link_to 'Sign Up', new_user_registration_path %> or <%= link_to 'Log In', new_user_session_path %> to request a delievery</h2>
<% end %>
