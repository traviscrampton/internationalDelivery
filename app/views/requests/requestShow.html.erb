<%= javascript_tag do %>
comingLat = <%= @flight.fromflight.latitude %>
comingLng = <%= @flight.fromflight.longitude %>
goingLat = <%= @flight.toflight.latitude %>
goingLng = <%= @flight.toflight.longitude %>
<% end %>
  <div class="container ">
    <% if current_user.id == @flight.user.id %>
      <% if @deal.flightdeal == false && @deal.requestdeal == true %>
        <div class="centered">
          <h3> <%= @request.user.fullname %> is curious if you'll take their <%= @request.item.itemname %></h3><hr>
        </div>
      <% end %>
    <% end %>
        <table class="table table-bordered">
          <div class="col-md-12">
            <tbody>
              <tr>
                <div class="col-md-3">
                  <td><%= image_tag @request.user.avatar.url(:thumb), class:"roundThumb" %></td>
                </div>
                <div class="col-md-6">
                  <td> <%= @request.item.itemdescription %> </td>
                </div>
                <div class="col-md-3 fright">
                  <td><%= image_tag @request.item.itemimage.url(:thumb), class:"roundThumb fright" %></td>
                </div>
              </tr>
            </tbody>
          </div>
        </table>
        <div class="col-md-12 buttonUnite">
          <div class="col-md-1"></div>
          <div class="col-md-4 centered">
            <h5>Flying From: <%= @flight.fromflight.airport %> </h5><br>
            <div id="frommap" class="littleMaps"></div>
          </div>
          <div class="col-md-2 ">
            <br><br><br>
            <button class="btn btn-default centered otherbuttn" data-toggle="modal" data-target="#modalTake">Take It</button>
            <button class="btn btn-default centered otherbuttn" data-toggle="modal" data-target="#modalNo">Decline</button>
          </div>
          <div class="col-md-4 centered">
            <h5>Flying To: <%= @flight.toflight.airport %> </h5><br>
            <div id="tomap" class="littleMaps"></div>
          </div>
          <div class="col-md-1"></div>
        </div>
          <div class="modal" id="modalTake">
            <div class="modal-dialog1">
              <div class="modal-content">
                <div class="modal-header">
                  <h3 class="modal-title">Take Itt</h3>
                  <div class="modal-body">
                    <p>Are You Sure You Want To Take <%= @request.user.fullname %>'s <%= @request.item.itemname %></p>
                    <%= link_to "I'm Sure", request_flight_path(@request, @flight, toggle:true), method: :patch, class:'btn btn-primary'%>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal" id="modalNo">
            <div class="modal-dialog1">
              <div class="modal-content">
                <div class="modal-header">
                  <h3 class="modal-title">Decline</h3>
                  <div class="modal-body">
                    <p>Are You Sure You Want To Decline?</p>
                    <%= link_to "I'm Sure", request_flight_path(@request, @flight, toggle:false), method: :patch, class:'btn btn-primary'%>
                  </div>
                </div>
              </div>
            </div>
          </div>

  </div>
