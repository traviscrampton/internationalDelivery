
<div class="row">
    <div class='asdf container' style="background-image: url(<%= @user.coverphoto.url %>);">
      <div class="col-md-3 nameAndpic">
        <%= image_tag @user.avatar.url(:medium), :class => "imag" %><hr>
        <h2><%= @user.fullname %></h2><hr>
      </div>
    </div>
</div>

<div class='container'>
  <% if current_user.id == @user.id %>
        <%= link_to 'Edit Cover Photo', edit_user_registration_path %>
  <% end %>
      <div class="row">
        <div class="requestArea">
          <h2><%= @user.firstname %>'s Requests </h2><hr>
            <% if @user.requests.any? %>
              <% @user.requests.each do |request| %>
                <h3><%= image_tag request.item.itemimage.url(:thumb)%> <%= link_to request.item.itemname, request_path(request) %> || <%= request.fromrequest.airport %> || <%= request.torequest.airport %> || Between <%= request.monthstart %> <%= request.daystart %>, <%= request.yearstart %> - <%= request.monthend %> <%= request.dayend %>, <%= request.yearend %> </h3>
                  <% if current_user.id == request.user.id %>
                    <h3>Delivery Offers:</h3>
                      <% request.flights.each do |flight| %>
                        <% if flight.deal == true %>
                          <%= link_to flight.user.fullname, user_path(flight.user) %>'s <%= link_to 'Offer', request_flight_path(request, flight) %>
                        <% end %>
                      <% end %>
                  <% end %>
              <% end %>
            <% else %>
              <h4>bebebe You Ain't Seen Nothing Yet</h4>
            <% end %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="requestArea">
          <h2>Outgoing Flights</h2><hr>
          <% if @user.flights.any? %>
            <% @user.flights.each do |flight| %>
                <h4> Coming From: <%= flight.fromflight.airport %>, Going To: <%= flight.toflight.airport %>, on <%= flight.fulldate %> <%= link_to "View Flight", flight_path(flight), class:"btn btn-default" %> </h4>
                <% if current_user.id == flight.user.id %>
                  <h4> Requests for This flight:</h4>
                    <% flight.requests.each do |request| %>
                      <% if request.deal == true %>
                        <%= link_to request.user.fullname, user_path(request.user) %>'s <%= link_to "Request", flight_request_path(flight, request) %>
                      <% end %>
                    <% end %>
                <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <h2>Waiting To Hear Back</h2><hr>
        <% if @user.requests.any? %>
          <% @user.requests.each do |request| %>
            <% if request.flights.any? %>
              <% request.flights.each do |flight| %>
                <% if flight.deal == false %>
                  <%= link_to flight.user.fullname, user_path(flight.user) %> <%= link_to "Flight", request_flight_path(request, flight)  %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>


      <div class="row contact" >
        <h2>Contact Information</h2>
        <h4><%= @user.fullname %> </h4>
        <h5><%= @user.email %></h5>
        <h5> <%= @user.territory %>, <%= @user.country %> </h5>
      </div>
</div>
