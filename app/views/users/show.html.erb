
<div class="row">
    <div class='asdf container' style="background-image: url(<%= @user.coverphoto.url %>);">
      <div class="col-md-3 nameAndpic">
        <%= image_tag @user.avatar.url(:medium), :class => "imag" %><hr>
        <h2><%= @user.fullname %></h2><hr>
      </div>
    </div>
</div>
<div class='container'>
  <% if current_user.id == @user.id %>
        <%= link_to 'Edit Cover Photo', edit_user_registration_path %>
  <% end %>
      <div class="row">
        <div class="requestArea">
          <h2><%= @user.firstname %>'s Requests </h2><hr>
            <% if @user.requests.any? %>
              <% @user.requests.each do |request| %>
                <h3><%= image_tag request.item.itemimage.url(:thumb)%> <%= link_to request.item.itemname, request_path(request) %> || <%= request.fromcountry %> || <%= request.airport %> || Between <%= request.monthstart %> <%= request.daystart %>, <%= request.yearstart %> - <%= request.monthend %> <%= request.dayend %>, <%= request.yearend %> </h3>
                  <% if current_user.id == request.user.id %>
                    <h3>Delivery Offers:</h3>
                      <% request.answers.each do |answer| %>
                        <% if answer.deal == true %>
                          <%= link_to answer.user.fullname, user_path(answer.user) %>'s <%= link_to 'Offer', request_answer_path(request, answer) %>
                        <% end %>
                      <% end %>
                  <% end %>
              <% end %>
            <% else %>
              <h4>bebebe You Ain't Seen Nothing Yet</h4>
            <% end %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="requestArea">
          <h2>Outgoing Flights</h2><hr>
          <% if @user.answers.any? %>
            <% @user.answers.each do |answer| %>
                <h4> Coming From: <%= answer.fromcountry %>, Going To: <%= answer.toairport %>, on <%= answer.fulldate %> <%= link_to "View Flight", answer_path(answer), class:"btn btn-default" %> </h4>
                <% if current_user.id == answer.user.id %>
                  <h3> Requests for Your flight:</h3>
                    <% answer.requests.each do |request| %>
                      <% if request.deal == true %>
                        <%= link_to request.user.fullname, user_path(request.user) %>'s <%= link_to "Request", answer_request_path(answer, request) %>
                      <% end %>
                    <% end %>
                <% end %>
            <% end %>
          <% end %>
        </div>

        <h2>Requests Awaiting Your Approval</h2><hr>
          <% @user.answers.each do |answer| %>
            <% answer.requests.each do |request| %>
              <% if request.deal == true %>
                <p><%= request.user.fullname %>'s <%= request.item.itemname %></p>
              <% end %>
            <% end %>
          <% end %>
      </div>
      <div class="row contact" >
        <h2>Contact Information</h2>
        <h4><%= @user.fullname %> </h4>
        <h5><%= @user.email %></h5>
        <h5> <%= @user.territory %>, <%= @user.country %> </h5>
      </div>
</div>
