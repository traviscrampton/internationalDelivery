  <div class="container">

  <h2>Internationals</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.text_field :firstname, label: "First Name"  %>
    </div>

    <div class="field form-group">
      <%= f.text_field :lastname, label: "Last Name" %>
    </div>

    <div class="field form-group">
      <%= f.text_field :phonenumber, label: 'Phone Number' %>
    </div>

    <div class="field form-group">
      <%= f.text_field :streetaddress, label: 'Street Address' %>
    </div>

    <div class="field form-group">
      <%= f.text_field :country, label: 'Country' %>
    </div>

    <div class="field form-group">
      <%= f.text_field :territory, label: 'State Or Territory' %>
    </div>

    <div class="field form-group">
      <%= f.text_field :zipcode, label: 'Zipcode' %>
    </div>

    <div class="field form-group">
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field form-group">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field form-group">
          <%= f.file_field :avatar, label: 'Profile Picture'%>
    </div>


    <div class="actions form-group">
      <%= f.submit "Sign up", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>

   </div>
 </div>
